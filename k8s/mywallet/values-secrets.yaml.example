# MyWallet Secrets Configuration
# Copy this file to values-secrets.yaml and fill in your actual values
# IMPORTANT: Never commit values-secrets.yaml to git!

secrets:
  # MongoDB credentials
  mongodb:
    rootPassword: "CHANGE-ME-secure-mongodb-password"

  # Gmail OAuth credentials
  # Get these from Google Cloud Console
  gmail:
    clientId: "YOUR-CLIENT-ID.apps.googleusercontent.com"
    clientSecret: "YOUR-GMAIL-CLIENT-SECRET"
    refreshToken: "YOUR-GMAIL-REFRESH-TOKEN"

  # OpenAI API credentials
  # Get from https://platform.openai.com/api-keys
  openai:
    apiKey: "sk-YOUR-OPENAI-API-KEY"

